<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activities.MainActivity"
    android:background="@color/background">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/srlRepositories"
        app:layout_constraintHeight_percent="0.1"
        android:background="@color/primary"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintHorizontal_bias="0.1"
            android:background="@drawable/shape_search"
            android:hint="@string/searchHint"
            android:paddingHorizontal="10dp"
            android:textColor="@color/black"
            android:textColorHint="#737373"
            android:maxLines="1"
            android:singleLine="true"
            android:lines="1"
            android:textSize="14dp"
            android:imeOptions="actionDone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srlRepositories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/clSearch"
        app:layout_constraintBottom_toTopOf="@id/clNavigationBar"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRepositories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_repository"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/srlRepositories"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintWidth_percent="0.8"
            android:background="@drawable/shape_navigation_bar"
            >
            <include
                layout="@layout/item_navigation_bar_button"
                android:id="@+id/bFirstPage"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/bPageSelector1"
                />
            <include
                layout="@layout/item_navigation_bar_button"
                android:id="@+id/bPageSelector1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/bFirstPage"
                app:layout_constraintEnd_toStartOf="@+id/bPageSelector2"
                />
            <include
                layout="@layout/item_navigation_bar_button"
                android:id="@+id/bPageSelector2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/bPageSelector1"
                app:layout_constraintEnd_toStartOf="@+id/bPageSelector3"
                />
            <include
                layout="@layout/item_navigation_bar_button"
                android:id="@+id/bPageSelector3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/bPageSelector2"
                app:layout_constraintEnd_toStartOf="@+id/bPageSelector4"
                />
            <include
                layout="@layout/item_navigation_bar_button"
                android:id="@+id/bPageSelector4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/bPageSelector3"
                app:layout_constraintEnd_toStartOf="@+id/bPageSelector5"
                />
            <include
                layout="@layout/item_navigation_bar_button"
                android:id="@+id/bPageSelector5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/bPageSelector4"
                app:layout_constraintEnd_toStartOf="@+id/bLastPage"
                />
            <include
                layout="@layout/item_navigation_bar_button"
                android:id="@+id/bLastPage"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/bPageSelector5"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
